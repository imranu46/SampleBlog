@model SampleBlog.Areas.Admin.ViewModels.UsersIndex

<h1>Users</h1>

<div class="btn-toolbar">
    <a href="@Url.Action("new")" class="btn btn-primary btn-sm">Create User</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>{Todo}</td>
                <td>
                    <div class="btn-group">
                        <a href="@Url.Action("edit", new {user.Id})" class="btn btn-sm btn-primary">Edit</a>
                        <a href="@Url.Action("resetpassword", new {user.Id})" class="btn btn-sm">Reset Password</a>
                        <a href="@Url.Action("delete", new {user.Id})" class="btn btn-sm btn-danger" data-post="Are you sure you want to delete @user.Username">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>